@model PA_project.Models.Book
@{
    ViewBag.Title = "EditBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit book: @Model.Title</h2>
<br />

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.BookId)
    @Html.HiddenFor(model => model.UserId)
    <div>
        <label for="Title">Title:</label>
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", required = "required" })
    </div>

    <div>
        <label for="Author">Author:</label>
        @Html.TextBoxFor(model => model.Author, new { @class = "form-control", required = "required" })
    </div>

    <div>
        <label for="Description">Description:</label>
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", required = "required" })
    </div>

    <div>
        <label for="Genre">Genre:</label>
        @Html.TextBoxFor(model => model.Genre, new { @class = "form-control", required = "required" })
    </div>

    <div>
        <label for="PublicationYear">Publication Year:</label>
        @Html.TextBoxFor(model => model.PublicationYear, new { @class = "form-control", type = "number", required = "required" })
    </div>

    <div>
        @Html.LabelFor(model => model.ImageUrl, "Book Cover Image:")
        @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control", type = "file", accept = "image/*", onchange = "displayFileName(this)" })
    </div>

    <br />
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Save book</button>
    </div>
}



