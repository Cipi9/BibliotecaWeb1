<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

<style>
    /* Custom floral styles */
    body {
        background-color: #FFF5EE; /* Lighter shade of floral color */
    }

    .navbar {
        background-color: #E3735E; /* A complementary color for the navigation section */
        border-color: #6c757d;
    }

    .nav-link {
        color: #fff;
        font-weight: bold;
        transition: color 0.3s;
    }

        .nav-link:hover {
            color: #fff;
            text-decoration: underline;
        }

    .navbar-brand {
        color: #fff;
        font-weight: bold;
    }

    .navbar-toggler-icon {
        background-color: #fff;
    }

    footer {
        color: #fff;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
    }

    .container.body-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    footer {
        margin-top: auto;
        text-align: left;
        padding: 10px;
    }

    .navbar-nav {
        list-style: none; /* Remove default list styles */
        padding: 0; /* Remove default padding */
        display: flex; /* Use flexbox layout */
        align-items: center; /* Align items vertically */
    }

    .nav-item {
        margin-right: 10px; /* Add space between list items */
    }
</style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar">
        <div class="container">
            <a class="navbar-brand">My Library</a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @{
                        int userId = PA_project.Utils.LoginHelper.Instance.UserId;
                    }
                    <li>@Html.ActionLink("My Books", "MyBooks", "Book", new { area = "", userId = userId }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("My Collections", "MyCollections", "Collection", new { area = "", userId = userId }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Universal Books", "UniversalBooks", "Book", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Logout", "Logout", "User", new { area = "" }, new { @class = "nav-link btn btn-outline-danger" })
                    </li>
                    <li class="nav-item">
                        @{ 
                            string username = PA_project.Utils.LoginHelper.Instance.Username;
                        }
                        <p class="mb-1 text-white"><strong>@username</strong></p>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="color: black; margin: 0;">&copy; @DateTime.Now.Year My Library</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
